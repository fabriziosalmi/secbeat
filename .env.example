# SecBeat Environment Variables
# Copy this file to .env and configure for your environment
# SECURITY: Never commit .env to version control

# =============================================================================
# Security Configuration
# =============================================================================

# SYN cookie secret for SYN flood mitigation (minimum 32 characters)
# SECURITY: Change this to a random value in production
# Generate with: openssl rand -hex 32
SYN_COOKIE_SECRET=your-secret-key-here-change-in-production

# =============================================================================
# TLS Configuration
# =============================================================================

# Path to TLS certificate file (PEM format)
# Absolute or relative path from project root
TLS_CERT_PATH=./mitigation-node/certs/cert.pem

# Path to TLS private key file (PEM format)
# SECURITY: Protect this file with chmod 600
TLS_KEY_PATH=./mitigation-node/certs/key.pem

# =============================================================================
# Backend Configuration  
# =============================================================================

# Comma-separated list of backend server URLs
# Format: http://host:port or https://host:port
# Example: http://backend-1:8080,http://backend-2:8080,http://backend-3:8080
BACKEND_SERVERS=http://backend-1:8080,http://backend-2:8080

# =============================================================================
# Logging Configuration
# =============================================================================

# Mitigation node log level (options: trace, debug, info, warn, error)
# Use 'info' for production, 'debug' for development
MITIGATION_LOG_LEVEL=info

# Orchestrator node log level (options: trace, debug, info, warn, error)
ORCHESTRATOR_LOG_LEVEL=info

# =============================================================================
# Feature Toggles
# =============================================================================

# Enable Web Application Firewall (true/false)
ENABLE_WAF=true

# Enable DDoS protection (true/false)
ENABLE_DDOS_PROTECTION=true

# Enable TLS termination (true/false)
# Set to false for plain HTTP mode (not recommended for production)
ENABLE_TLS_TERMINATION=true

# =============================================================================
# Network Ports
# =============================================================================

# Public HTTPS/HTTP port (integer, 1024-65535)
# Default: 8443 for HTTPS
PUBLIC_PORT=8443

# Management API port (integer, 1024-65535)
# Exposes /api/v1/* endpoints
MANAGEMENT_PORT=9999

# Prometheus metrics port (integer, 1024-65535)
# Metrics available at http://localhost:PORT/metrics
METRICS_PORT=9191

# =============================================================================
# SECURITY NOTES
# =============================================================================
#
# 1. Change SYN_COOKIE_SECRET before deploying to production
# 2. Protect TLS_KEY_PATH file: chmod 600
# 3. Never commit .env to version control (add to .gitignore)
# 4. Rotate secrets regularly (recommended: every 90 days)
# 5. Use environment-specific files (.env.development, .env.production)
#
# Generate strong secrets:
#   openssl rand -hex 32
#
# =============================================================================
