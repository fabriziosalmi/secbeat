# SecBeat Platform Environment Configuration

# Security
SYN_COOKIE_SECRET=your-secret-key-here-change-in-production

# TLS Certificates
TLS_CERT_PATH=./mitigation-node/certs/cert.pem
TLS_KEY_PATH=./mitigation-node/certs/key.pem

# Backend Configuration  
BACKEND_SERVERS=http://backend-1:8080,http://backend-2:8080

# Logging Levels
MITIGATION_LOG_LEVEL=info
ORCHESTRATOR_LOG_LEVEL=info

# Feature Toggles
ENABLE_WAF=true
ENABLE_DDOS_PROTECTION=true
ENABLE_TLS_TERMINATION=true

# Network Configuration
PUBLIC_PORT=8443
MANAGEMENT_PORT=9999
METRICS_PORT=9191
