# SecBeat Terraform Configuration
# Copy this file to terraform.tfvars and fill in your values

# Proxmox connection details
proxmox_host     = "192.168.100.23"
proxmox_user     = "root"
proxmox_password = "YOUR_PROXMOX_PASSWORD"

# SSH public key for VM access (contents of ~/.ssh/id_rsa.pub)
# Get this with: cat ~/.ssh/id_rsa.pub
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAA..."

# Optional overrides
# vm_template = "ubuntu-24.04-server"
