# NATS Server Configuration
port: 4222
http_port: 8222

# Cluster configuration
cluster {
  name: secbeat-cluster
  listen: 0.0.0.0:6222
  routes: [
{% for host in groups['nats_cluster'] %}
    nats://{{ hostvars[host]['ansible_host'] }}:6222
{% endfor %}
  ]
}

# Logging
log_file: "/var/log/nats/nats.log"
logtime: true
debug: false
trace: false

# Limits
max_connections: 1000
max_payload: 8388608  # 8MB

# Security
authorization {
  timeout: 5
}
