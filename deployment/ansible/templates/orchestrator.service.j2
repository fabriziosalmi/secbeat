[Unit]
Description=SecBeat Orchestrator Node
After=network.target nats.service

[Service]
Type=simple
User={{ secbeat_user }}
WorkingDirectory={{ secbeat_home }}
ExecStart={{ secbeat_home }}/target/release/orchestrator-node
Restart=always
RestartSec=10s
Environment=RUST_LOG=info

[Install]
WantedBy=multi-user.target
